# ===========================================
# RIFT REWIND - Environment Configuration
# ===========================================
# Copy this file to .env.local and fill in values

# ----- Application Mode -----
# Set to "true" to use mock data (no AWS required)
# Set to "false" to use real AWS integrations
NEXT_PUBLIC_MOCK_MODE=true

# ----- Riot API -----
# Get your API key from https://developer.riotgames.com/
# ⚠️ SERVER-ONLY: Never expose this to the client
RIOT_API_KEY=RGAPI-xxxxxxxx-xxxx-xxxx-xxxx-xxxxxxxxxxxx

# ----- AWS Configuration -----
# AWS credentials (use IAM roles in production)
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=

# ----- DynamoDB -----
# Table for storing rewind job status and results
DDB_TABLE_NAME=rift-rewind-jobs
DDB_MATCHES_TABLE_NAME=rift-rewind-matches

# ----- S3 -----
# Bucket for raw match data and generated share cards
S3_BUCKET_NAME=rift-rewind-data
S3_SHARE_CARDS_PREFIX=share-cards/

# ----- Step Functions -----
# State machine ARN for the rewind workflow
STEP_FUNCTION_ARN=arn:aws:states:us-east-1:123456789012:stateMachine:RiftRewindWorkflow

# ----- Amazon Bedrock -----
# Model ID for AI-generated narratives and tips
BEDROCK_MODEL_ID=anthropic.claude-3-sonnet-20240229-v1:0

# ----- Rate Limiting -----
# Riot API has rate limits - configure accordingly
RIOT_API_RATE_LIMIT_PER_SECOND=20
RIOT_API_RATE_LIMIT_PER_MINUTE=100

# ----- Feature Flags -----
# Enable/disable features
NEXT_PUBLIC_ENABLE_COMPARE=true
NEXT_PUBLIC_ENABLE_SHARE_CARDS=true

# ----- Cache Configuration -----
# TTL for cached data in seconds
CACHE_TTL_SECONDS=3600
MAX_MATCHES_TO_FETCH=100

# ----- Site URL (for share links) -----
NEXT_PUBLIC_SITE_URL=http://localhost:3000

